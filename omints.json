/** Use Cases... 
1. Create Mats Account
    POST /          >>  { id:mat  }        
2. Create Bits Currency
    POST /mat       >>  { id:bits }
3. Issue 10 bits
    POST /mat/bits  >>  { to:/mat, type:issue,  amount:10, memo:'Initial Issue' } 
3. Send 5 bits from mat to nik
    POST /mat/bits  >>  { to:/nik, amount:4, memo:'Welcome'}
4. Get all mats balances
    GET  /mat/      <<  [ { id:bits, owner:/mat, total:10, balance:6 } ] 
5. Get all Bits Transactions
    GET  /mat/bits/ <<  [ { id:1, to:/mat, amount:10 }, { id:2, to:/nik, amount:4 }]
6. Get balance of Niks Bits
    GET  /nik/bits  <<  { id:bits, owner:/mat, total:10, balance:4 }
7. Get details for bits
    GET  /mat/bits  <<  { id:bits, owner:/mat, total:10, issued:10, redeemed:0 }
8. Get all people who accept bits
    GET /?tags=bit  <<  [ { id:mat, email:mat.taylor@gmail.com, tags:[bits,bobs]
9. Post offer
    POST 
10.Nik redeems 10 bits
    POST /niks/bits >> { to:/mat, type:redeem, amount:4, memo:'Backrub'}
11.Reserve 5 bits.
    POST /niks/bits >> { to:/mat, type:reserve, amount:4 }
**/

profile:
    name:'Profile'
    properties:
        id:         description:'Profile User ID'
        name:       description:'User Name'
        mail:       description:'Email address'
        fbId:       description:'Facebook ID'
        twId:       description:'Twitter Id'
        desc:       description:'Description of this user'
        tags:       description:'Public facing tags (eg currency id's)'
    links:
        url:'/',        rel:'instances' 
        url:'/{id}',    rel:'self'
        url:'/{id}/'    rel:'balances'
        

account:
    name:'Account'
    properties:
        id:         description:'The Account Currency Id'
        icon:       description:'The Currency Icon image'
        acId:       description:'The User who owns this account'
        issuer:     description:'The userId of the Owner of this currency'
        issued:     description:'Total Currency Issued'
        balance:    description:'Total Currency avalailable in this account'
        redeemed:   description:'Total Currency redeeemed'    
        about:      description:'About this currency'
    links:
        url:'/{acId}/',     rel:'instances'
        url:'/{acId}/{id}', rel:'self'
        url:'/{acId}/{id}/' rel:'transactions'
        url:'/{issuer}',    rel:'issuer'
        
transact:
    name:'Transact'
    properties:
        id:         description:'The Transaction Id'
        type:       description:'The type of transaction - issue, claim, transfer, test, reserve, reciept'
        amount:     description:'The amount of currency in this transaction'
        source:     description:'This account profile and Id (Eg /mat/credits)'
        to:         description:'AccountId of the recipient'
        date:       description:'The date of the transaction'
        status:     description:'The status of the transaction - pending, cleared, failed'
        memo:       description:'Additonal Info about this transaction'
    links:
        url:'{source}',     rel:'account'
        url:'{source}/',    rel:'instances'
        url:'{source}/{id}',rel:'self'
        url:'/{to}',        rel:'target'
        